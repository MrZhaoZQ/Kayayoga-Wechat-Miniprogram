/* pages/livePlayer/livePlayer.wxss */
page{
  width: 100%; height: 100%;
  position: fixed; left: 0; top: 0;
}
.container{
  width: 100%; height: 100%;
  position: relative; left: 0; top: 0;
}
.backIcon{
  width: 36rpx; height: 36rpx;
  padding: 14rpx 14rpx;
  position: fixed; top: 52rpx;
  z-index: 666;
}
live-player{
  width: 100%; height: 100%;
}
.layer{
  width: 100%; height: 100%;
  position: absolute; left: 0; top: 0;
}
.layer .head{
  width: 100%; height: 77rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute; left: 0; top: 166rpx;
}
.layer .leftBox{
  max-width: 300rpx; height: 77rpx;
  padding-right: 26rpx;
  border-radius: 36rpx;
  background: #909091;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.layer .leftBox image{
  width: 67rpx; height: 67rpx;
  border-radius: 50%;
  margin: 0 8rpx;
}
.layer .head .leftBox .txtBox{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  color: #d6d6d6;
  font-size: 26rpx;
}
.layer .head .rightBox{
  width: 380rpx; height: 60rpx;
  position: relative; left: 0; top: 0;
}
.layer .head .rightBox .viewNum{
  width: auto; height: 60rpx;
  padding: 0 22rpx;
  border-radius: 36rpx;
  background: #909091;
  position: absolute; right: 0; top: 0;
  text-align: center;
  line-height: 60rpx;
  color: #d6d6d6;
}
.layer .head .rightBox scroll-view{
  width: 340rpx;
}
.layer .head .rightBox .viewerList{
  width: auto; height: 60rpx;
  min-width: 340rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.layer .head .rightBox .viewerList .viewerItem{
  width: 60rpx; height: 60rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  position: relative; left: 0; top: 0;
}
.layer .head .rightBox .viewerList .viewerItem image{
  width: 60rpx; height: 60rpx;
  border-radius: 50%;
}
.layer .head .rightBox .viewerList .viewerItem text{
  width: 60rpx; height: 24rpx;
  position: absolute; left: 0; bottom: 0;
  text-align: center;
  line-height: 24rpx;
  font-size: 18rpx;
  color: #fff;
  font-weight: bolder;
}
.layer .txtLayer{
  width: 568rpx; height: 54rpx;
  position: absolute; left: 30rpx; bottom: 684rpx;
  z-index: 66;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0));
  background: -webkit-linear-gradient(to bottom, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0));
}
.layer .msgList{
  width: 568rpx; height: 556rpx;
  position: absolute; left: 30rpx; bottom: 182rpx;
  -webkit-mask-image: linear-gradient(to bottom,rgba(255,255,255,0) 0,rgba(255,255,255,.6) 16%,rgba(255,255,255,1) 100%);
}
.layer .msgList .msgItem{
  width: 100%;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.layer .msgList .msgItem .avatar{
  width: 54rpx; height: 54rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}
.layer .msgList .msgItem .msg{
  width: 508rpx; height: auto;
  box-sizing: border-box;
  padding: 6rpx 20rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 36rpx;
  color: #fff;
  line-height: 34rpx;
}
.layer .msgList .msgItem .msg text{
  color: #17aebd;
}
.layer .foot{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  position: absolute; left: 0; bottom: 86rpx;
}
.layer .foot .inputBox{
  width: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.layer .foot .inputBox open-data{
  width: 67rpx; height: 67rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  overflow: hidden;
}
.layer .foot .inputBox input{
  width: 260rpx; height: 70rpx;
  box-sizing: border-box;
  padding: 0 26rpx;
  border-radius: 36rpx;
  background: #909091;
  line-height: 70rpx;
  color: #fff;
}
.layer .foot .inputBox .sendBtn{
  width: 126rpx; height: 68rpx;
  margin-left: 116rpx;
  border-radius: 36rpx;
  background: #17aebd;
  color: #fff;
  text-align: center;
  line-height: 68rpx;
}
.layer .foot .likeBtn{
  width: 70rpx; height: 70rpx;
}

.mySwiper{
  width: 100%; height: 100%;
}
.mySwiper swiper-item{
  width: 100%; height: 100%;
}

.canvas {
  background: transparent;
  width: 90px;
  height: 400px;
  position: absolute; right: 0; bottom: 70rpx;
  z-index: 666;
}

.noPusher{
  width: 100%; height: 100%;
  background: #e1e1e1;
  position: fixed; left: 0; top: 0;
  z-index: 999;
}
.noPusher .popup{
  width: 100%; height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.noPusher .popup .fallbackImg{
  width: 298rpx; height: 298rpx;
}
.noPusher .popup .liveIcon{
  width: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute; left: 30rpx; top: 92rpx;
}
.noPusher .popup .liveIcon .dot{
  width: 20rpx; height: 20rpx;
  margin-right: 10rpx;
  background: #f00;
  border-radius: 50%;
}
