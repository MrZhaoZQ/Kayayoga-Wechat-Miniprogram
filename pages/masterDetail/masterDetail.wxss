/* pages/masterDetail/masterDetail.wxss */
page{
  background: #f4f4f4;
}
.container{
  padding-bottom: 168rpx;
}

.infoBox{
  width: 100%;
  box-sizing: border-box;
  padding: 48rpx 48rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.infoBox image{
  width: 200rpx; height: 200rpx;
  border-radius: 50%;
}
.infoBox text{
  display: block;
}
.infoBox .masterName{
  margin: 20rpx 0 10rpx;
  font-weight: bolder;
  font-size: 36rpx;
}
.infoBox .masterName, .infoBox .masterTag, .infoBox .masterSkill, .infoBox .masterFans{
  line-height: 46rpx;
}
.infoBox .masterFans{
  margin: 20rpx 0 30rpx;
  font-weight: bolder;
}
.infoBox .masterTxt{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 50rpx;
  background: #fff;
  border-radius: 20rpx;
}
.infoBox .masterTxt text{
  display: block;
}

.subtitle{
  width: 100%;
  box-sizing: border-box;
  padding: 68rpx 48rpx 56rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.subtitle .leftTxt{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 48rpx;
  font-weight: bolder;
}
.subtitle .leftTxt .line{
  width: 10rpx; height: 52rpx;
  margin-right: 10rpx;
  background: #17aebd;
}
.subtitle .rightTxt{
  font-weight: bolder;
}

.videoList{
  width: 100%;
  box-sizing: border-box;
  padding: 0 48rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
}
.videoList .item{
  width: 280rpx; height: auto;
  margin-bottom: 76rpx;
}
.videoList .item:nth-child(odd){
  margin-right: 47rpx;
}
.videoList .item:nth-child(even){
  margin-left: 47rpx;
}
.videoList .item .imgBox{
  width: 280rpx; height: 280rpx;
  margin-bottom: 20rpx;
  position: relative; left: 0; top: 0;
}
.videoList .item .imgBox image{
  width: 280rpx; height: 280rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx 6rpx #d4d4d4;
}
.videoList .item .imgBox view{
  width: 114rpx; height: 45rpx;
  background: rgba(0,0,0,0.6);
  border-radius: 26rpx;
  position: absolute; right: 10rpx; bottom: 10rpx;
  text-align: center;
  line-height: 45rpx;
  color: #fff;
}
.videoList .item .videoName{
  width: 280rpx;
  display: block;
  margin-bottom: 20rpx;
}
.videoList .item .like{
  width: 280rpx; height: 42rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  line-height: 42rpx;
}
.videoList .item .like image{
  width: 42rpx; height: 42rpx;
}
.liveEvtList{
  width: 100%; height: auto;
  box-sizing: border-box;
  padding: 0 48rpx;
}
.liveEvtList .liveEvtItem{
  width: 100%; height: 280rpx;
  margin-bottom: 66rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.liveEvtItem image{
  width: 280rpx; height: 280rpx;
  border-radius: 20rpx 0 0 20rpx;
  box-shadow: 0 0 10rpx 6rpx #d4d4d4;
}
.liveEvtItem .liveEvtInfoBox{
  flex: 1; 
  height: 280rpx;
  box-sizing: border-box;
  padding: 15rpx 20rpx;
}
.liveEvtItem .liveEvtInfoBox .liveEvtTitle{
  margin-bottom: 12rpx;
  font-weight: bolder;
  font-size: 28rpx;
}
.liveEvtItem .liveEvtInfoBox .liveEvtDate, .liveEvtItem .liveEvtInfoBox .liveEvtTime{
  margin-bottom: 12rpx;
}
.liveEvtItem .liveEvtInfoBox .btn{
  width: 166rpx; height: 56rpx;
  background: #17aebd;
  border-radius: 36rpx;
  line-height: 56rpx;
  text-align: center;
  color: #fff;
}

.fixedBtm{
  width: 100%; height: 162rpx;
  box-sizing: border-box;
  padding: 0 48rpx 26rpx 12rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed; left: 0; bottom: 0;
}
.fixedBtm .navBox{
  width: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.fixedBtm .navBox image{
  width: 55rpx; height: 55rpx;
  padding: 20rpx 36rpx;
}
.fixedBtm .navBox button{
  width: 127rpx; height: 95rpx;
  margin: 0;
  padding: 0;
  border-radius: 0;
  font-size: 30rpx;
}
.fixedBtm .followBtn{
  width: 138rpx; height: 58rpx;
}

.sharePopup{
  width: 100%; height: 100%;
  position: fixed; left: 0; top: 0;
  background: rgba(0,0,0,0.6);
}
.sharePopup .shareBtns{
  width: 100%; height: auto;
  background: #f4f4f4;
  position: absolute; left: 0; bottom: 0;
}
.sharePopup .shareBtns button{
  width: 100%; height: 100rpx;
  display: block;
  margin: 0;
  padding: 0;
  border-radius: 0;
  border-bottom: 1rpx #ccc solid;
  background: #fff;
  font-weight: normal;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
}
.sharePopup .shareBtns view{
  width: 100%; height: 100rpx;
  border-bottom: 1rpx #ccc solid;
  background: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
}
.sharePopup .shareBtns view.cancel{
  margin-top: 20rpx;
  border-top: 1rpx #ccc solid;
  border-bottom: none;
}

.posterPopup{
  width: 100%; height: 100%;
  position: fixed; left: 0; top: 0;
  background: rgba(0,0,0,0.6);
}
.posterPopup .close{
  width: 36rpx; height: 36rpx;
  padding: 20rpx;
  position: absolute; right: 40rpx; top: 0;
}
.posterPopup .canvasBox{
  width: 630rpx; height: 1080rpx;
  background: #fff;
  position: absolute; left: 60rpx; top: 76rpx;
}
#poster{
  width: 630rpx; height: 1080rpx;
}