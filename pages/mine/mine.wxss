/* pages/mine/mine.wxss */
page{
  background: #f4f4f4;
}
.container{
  padding-bottom: 68rpx;
}

.tabbars{
  width: 100%; height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tabbars view{
  flex: 1;
  height: 80rpx;
  box-sizing: border-box;
  border-bottom: 6rpx #f4f4f4 solid;
  text-align: center;
  line-height: 80rpx;
}
.tabbars view.active{
  border-bottom: 6rpx #000 solid;
  font-weight: bolder;
}

.myList{
  width: 100%;
  box-sizing: border-box;
  padding: 0 48rpx;
}
.myItem{
  width: 100%;
  padding: 66rpx 0;
  border-bottom: 1rpx #a0a0a0 solid;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.myItem .imgBox{
  width: 280rpx; height: 280rpx;
  margin-right: 30rpx;
  position: relative; left: 0; top: 0;
}
.myItem .imgBox image{
  width: 280rpx; height: 280rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx 6rpx #d4d4d4;
}
.myItem .imgBox view{
  width: 114rpx; height: 45rpx;
  background: rgba(0,0,0,0.6);
  border-radius: 26rpx;
  position: absolute; right: 10rpx; bottom: 10rpx;
  text-align: center;
  line-height: 45rpx;
  color: #fff;
}
.myItem .infoBox{
  flex: 1;
  padding-top: 20rpx;
}
.myItem .infoBox .itemName{
  display: block;
  margin-bottom: 16rpx;
  font-weight: bolder;
}
.myItem .infoBox .itemDesc{
  display: block;
  margin-bottom: 16rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.myItem .infoBox .like{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.myItem .infoBox .like image{
  width: 42rpx; height: 42rpx;
}